%html
	%head
		%title Starter
		= stylesheet_link_tag "https://fonts.googleapis.com/icon?family=Material+Icons" 
		= stylesheet_link_tag "application", :media => "all" , "data-turbolinks-track" => true
		= javascript_include_tag "application" , "data-turbolinks-track" => true
	        
		= csrf_meta_tags
		
		
	%body
		.mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer.mdl-layout--overlay-drawer-button
			.mdl-layout__drawer
				%header.demo-drawer-header
					%img.demo-avatar{:src => "/images/user.jpg"}/
					.demo-avatar-dropdown
						%span hello@example.com
					/ 	.mdl-layout-spacer
					/ 	%button#accbtn.mdl-button.mdl-js-button.mdl-js-ripple-effect.mdl-button--icon
					/ 		%i.material-icons{:role => "presentation"} arrow_drop_down
					/ 		%span.visuallyhidden Accounts
					/ %ul.mdl-menu.mdl-menu--bottom-right.mdl-js-menu.mdl-js-ripple-effect{:for => "accbtn"}
					/ 	%li.mdl-menu__item hello@example.com
					/ 	%li.mdl-menu__item info@example.com
					/ 	%li.mdl-menu__item
					/ 		%i.material-icons> add
					/ 		Add another account...

				%span.mdl-layout-title Invoice Admin
				%nav.mdl-navigation
					%a.mdl-navigation__link{:href => "#{companies_path}"}
						%i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"} business
						Companies
					%a.mdl-navigation__link{:href => "#{contracts_path}"} 
						%i.mdl-color-text--blue-grey-400.material-icons{:role => "presentation"} book
						Contracts
					
			%main.mdl-layout__content
				.page-content
					.mdl-grid
						%br
						%br
						= yield