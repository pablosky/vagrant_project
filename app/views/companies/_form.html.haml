.mdl-cell.mdl-cell--12-col
	%br
	%br
	%br
	
	= form_for(@company)  do |f|
		.mdl-textfield.mdl-js-textfield
			= f.text_field :company_name ,class: "mdl-textfield__input"
			= f.label :company_name , class: "mdl-textfield__label" ,for: ":company_name"
		%br
		.mdl-textfield.mdl-js-textfield
			= f.text_field :company_email ,class: "mdl-textfield__input"
			= f.label :company_email , class: "mdl-textfield__label" ,for: ":company_email"
		
		%br
		.mdl-textfield.mdl-js-textfield
			= f.text_field :company_contact_name ,class: "mdl-textfield__input"
			= f.label :company_contact_name , class: "mdl-textfield__label" ,for: ":company_contact_name"
		%br
		.mdl-textfield.mdl-js-textfield
			= f.text_field :company_contact_phone ,class: "mdl-textfield__input"
			= f.label :company_contact_phone , class: "mdl-textfield__label" ,for: ":company_contact_phone"
		%br
		.mdl-textfield.mdl-js-textfield
			= f.text_field :company_country ,class: "mdl-textfield__input"
			= f.label :company_country , class: "mdl-textfield__label" ,for: ":company_country"
		%br
		= f.submit  class: "mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect"